    "version": "0.2.0",
    "configurations": [
        {
            "name": "train (one sample)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["one_sample=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "train (one sample + debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["one_sample=True", "debug=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "train (debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["debug=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        },
        {
            "name": "train (distributed + debug)",
            "type": "python",
            "request": "launch",
            "module": "torch.distributed.run",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "--rdzv_backend", 
                "c10d",
                "--rdzv_endpoint", 
                "localhost:29500",
                "--nnodes=1",
                "train.py",
                "debug=True",
                // "one_sample=True"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "1,2",
                "TORCH_NCCL_DEBUG": "INFO",
                "CUDA_LAUNCH_BLOCKING": "1",
                "TORCH_DISTRIBUTED_DEBUG": "DETAIL",
                "NCCL_P2P_DISABLE": "0",
                "NCCL_ASYNC_ERROR_HANDLING": "1"
            }
        },
        {
            "name": "generate output videos",
            "type": "debugpy",
            "request": "launch",
            "program": "generate_output_videos.py",
            "console": "integratedTerminal",
            "args": ["debug=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        },
        {
            "name": "calculate fid",
            "type": "debugpy",
            "request": "launch",
            "program": "calculate_fid.py",
            "console": "integratedTerminal",
            "args": ["debug=True"],
        },
        {
            "name": "profiler",
            "type": "debugpy",
            "request": "launch",
            "program": "profile_model.py",
            "console": "integratedTerminal",
            // "args": ["debug=True"],
        },
    ]
}